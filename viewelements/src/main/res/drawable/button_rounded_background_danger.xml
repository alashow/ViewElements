<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_red" />
            <stroke android:width="1dp" android:color="@color/darker_red" />
            <corners android:radius="@dimen/button_rounded" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/red" />
            <stroke android:width="1dp" android:color="@color/dark_red" />
            <corners android:radius="@dimen/button_rounded" />
        </shape>
    </item>

</selector>