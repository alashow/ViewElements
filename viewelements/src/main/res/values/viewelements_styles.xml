<resources>

    <style name="Button">
        <item name="android:background">@drawable/button_background_default</item>
        <item name="android:padding">@dimen/button_normal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ButtonPrimary" parent="Button">
        <item name="android:background">@drawable/button_background_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSuccess" parent="Button">
        <item name="android:background">@drawable/button_background_success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDanger" parent="Button">
        <item name="android:background">@drawable/button_background_danger</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonWarning" parent="Button">
        <item name="android:background">@drawable/button_background_warning</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonAsphalt" parent="Button">
        <item name="android:background">@drawable/button_background_asphalt</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSeaGreen" parent="Button">
        <item name="android:background">@drawable/button_background_sea_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRounded" parent="Button">
        <item name="android:background">@drawable/button_rounded_background_default</item>
    </style>

    <style name="ButtonPrimaryRounded" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_rounded_background_primary</item>
    </style>

    <style name="ButtonSuccessRounded" parent="ButtonSuccess">
        <item name="android:background">@drawable/button_rounded_background_success</item>
    </style>

    <style name="ButtonDangerRounded" parent="ButtonDanger">
        <item name="android:background">@drawable/button_rounded_background_danger</item>
    </style>

    <style name="ButtonWarningRounded" parent="ButtonWarning">
        <item name="android:background">@drawable/button_rounded_background_warning</item>
    </style>

    <style name="ButtonAsphaltRounded" parent="ButtonAsphalt">
        <item name="android:background">@drawable/button_rounded_background_asphalt</item>
    </style>

    <style name="ButtonSeaGreenRounded" parent="ButtonSeaGreen">
        <item name="android:background">@drawable/button_rounded_background_sea_green</item>
    </style>

    <style name="Input">
        <item name="android:background">@drawable/input_background_default</item>
        <item name="android:padding">@dimen/input_normal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="InputRounded">
        <item name="android:background">@drawable/input_rounded_background</item>
        <item name="android:padding">@dimen/input_normal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="InputLarge" parent="Input">
        <item name="android:padding">@dimen/input_large</item>
    </style>

    <style name="InputRoundedLarge" parent="InputRounded">
        <item name="android:padding">@dimen/input_large</item>
    </style>

    <style name="InputDanger" parent="Input">
        <item name="android:background">@drawable/input_background_danger</item>
    </style>

    <style name="InputDangerLarge" parent="Input">
        <item name="android:background">@drawable/input_background_danger</item>
        <item name="android:padding">@dimen/input_large</item>
    </style>

    <style name="InputSuccess" parent="Input">
        <item name="android:background">@drawable/input_background_success</item>
    </style>

    <style name="InputSuccessLarge" parent="Input">
        <item name="android:background">@drawable/input_background_success</item>
        <item name="android:padding">@dimen/input_large</item>
    </style>

    <style name="InputWarning" parent="Input">
        <item name="android:background">@drawable/input_background_warning</item>
    </style>

    <style name="InputWarningLarge" parent="Input">
        <item name="android:background">@drawable/input_background_warning</item>
        <item name="android:padding">@dimen/input_large</item>
    </style>


    <style name="InputRoundedDanger" parent="InputRounded">
        <item name="android:background">@drawable/input_rounded_background_danger</item>
    </style>

    <style name="InputRoundedDangerLarge" parent="InputRounded">
        <item name="android:background">@drawable/input_rounded_background_danger</item>
        <item name="android:padding">@dimen/input_large</item>
    </style>

    <style name="InputRoundedSuccess" parent="InputRounded">
        <item name="android:background">@drawable/input_rounded_background_success</item>
    </style>

    <style name="InputRoundedSuccessLarge" parent="InputRounded">
        <item name="android:background">@drawable/input_rounded_background_success</item>
        <item name="android:padding">@dimen/input_large</item>
    </style>

    <style name="InputRoundedWarning" parent="InputRounded">
        <item name="android:background">@drawable/input_rounded_background_warning</item>
    </style>

    <style name="InputRoundedWarningLarge" parent="InputRounded">
        <item name="android:background">@drawable/input_rounded_background_warning</item>
        <item name="android:padding">@dimen/input_large</item>
    </style>

</resources>
